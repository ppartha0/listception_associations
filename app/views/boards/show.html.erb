<div class="page-header">
  <h3>Board #<%= @board.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <ht>Title</ht>
      <dd><%= @board.title %></dd>

      <ht>Description</ht>
      <dd><%= @board.description %></dd>

    </dl>
    
    <dt>Lists</dt>
      <dd> 
        <ul class="list-group">
          
            
            <% @board.lists.each do |list| %>
              <li class="list-group-item">
                <p><%= list.title %></p>
                <% list.cards.each do |card| %>
                    <ol><%= card.title %></ol>
                    <ul><%= card.description %></ul>
                    <% card.taggings.each do |tag| %>
                        <a href="/tags/<%= tag.tag_id %>" class="label label-default">
                        <%= Tag.find_by({:id => tag.tag_id}).name %>
                        </a>
                        &nbsp;
                    <% end %>
                <% end %>
              </li>
            <% end %>
        </ul>
      </dd>
    

    <div class="btn-group btn-group-justified">
      <a href="/boards" class="btn btn-default">
        Back
      </a>
      <a href="/boards/<%= @board.id %>/edit" class="btn btn-default">
        Edit
      </a>
      <a href="/delete_board/<%= @board.id %>" class="btn btn-default" rel="nofollow">
        Delete
      </a>
    </div>
    
  </div>
</div>
